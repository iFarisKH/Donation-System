<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CreditCardFragment">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:paddingVertical="40dp"
        android:src="@drawable/rec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="50dp"
        android:text="@string/numOfCards"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:layout_marginVertical="110dp"
        android:text="@string/cardNum"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:layout_marginVertical="140dp"
        android:text="@string/expDate"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="55dp"
        android:layout_marginVertical="165dp"
        android:contentDescription="@null"
        android:src="@drawable/mastercard" />

    <ImageView
        android:id="@+id/amount"
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/ic_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="240dp"
        android:text="@string/statement"
        android:textColor="@color/gray"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="320dp"
        android:text="@string/balance"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginHorizontal="175dp"
        android:layout_marginVertical="370dp"
        android:text="@string/currency"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/addWallet"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="455dp"
        android:backgroundTint="@color/white"
        android:text="@string/addWallet"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/addCard"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="495dp"
        android:backgroundTint="@color/white"
        android:text="@string/addCard"
        android:textColor="@color/blue" />


</FrameLayout>